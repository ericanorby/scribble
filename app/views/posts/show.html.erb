<%= link_to "Go Back", posts_path %>

<h1><%= @post.title %></h1>
<div class="float">
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete %>
</div>
<p class="show-post">Posted by <%= @post.author %> on <%= @post.created_at %></p>

<p><%= @post.content %></p>

<div class="comment-links">
  <h3>Comments</h3>
  <%= link_to "Add a comment", new_post_comment_path(@post) %>
  <% if @post.comments.length == 0 %>
    <br><br>
    <p style="font-style:italic;">No comments yet.</p>
    <br><br>
  <% end %>
</div>

<% if @post.comments.length > 0 %>
  <% @post.comments.each do |comment| %>
    <div class="comment-box">
      <p class="show-comment">Posted by <%= comment.author %> on <%= comment.created_at %></p>
      <p><%= comment.content %></p>
      <div class="float">
        <%= link_to "Edit", edit_post_comment_path(@post, comment) %>
        <%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
      </div>
    </div>
  <% end %>
<% end %>
